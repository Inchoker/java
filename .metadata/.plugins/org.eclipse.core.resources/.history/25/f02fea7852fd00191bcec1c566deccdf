package com.plus17.numbern1.NumberN1;

import java.util.Scanner;

public class NumberN1 {
	private int n;

	public NumberN1(int n) {
		super();
		this.n = takeNFromUser();
	}

//	boolean isContinue = true;
//	while (isContinue==true) {
//	}
	private int takeNFromUser() {
		int kq;
		Scanner sC = new Scanner(System.in);
		System.out.println(System.in);
		System.out.println("Hay nhap so can tinh vao");
		kq= sC.nextInt();
		sC.close();
		return kq;
	}
	private int calcSumChar() {
		String newN = n+"";
		
		for (int i=0;i<newN.length();i++) {
//			kq+= Integer.parseInt(newN.charAt(i));
			int kq+= newN.charAt(i)-'0';
		}
		return kq;
		
	}
	
	

}
